<div id="contact-form">
    <form action="/contact" method="post">
        <input type="text" class="form-area" placeholder="Name" required="true">
        <input type="email" class="form-area" placeholder="Email" required="true">
        <textarea name="message" class="form-area" id="contact-message" placeholder="Message"></textarea>
        <div>
            <input type="submit" value="Submit" class="form-button">
        </div>

    </form>
</div>
